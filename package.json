{
  "name": "docs",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "fumadocs-mdx && next build",
    "start": "next start",
    "export": "next build && next export",
    "postinstall": "fumadocs-mdx",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:md": "markdownlint content/**/*.md content/**/*.mdx",
    "lint:md:fix": "markdownlint --fix content/**/*.md content/**/*.mdx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run lint && npm run lint:md",
    "validate:fix": "npm run type-check && npm run lint:fix && npm run lint:md:fix && npm run format",
    "content:build": "fumadocs-mdx",
    "content:dev": "fumadocs-mdx --watch",
    "preview": "npm run build && npm run start",
    "clean": "rimraf .next out",
    "check-links": "node scripts/check-links.js",
    "generate-sitemap": "node scripts/generate-sitemap.js"
  },
  "dependencies": {
    "@types/prismjs": "^1.26.5",
    "fumadocs-core": "^15.8.1",
    "fumadocs-mdx": "12.0.1",
    "fumadocs-ui": "15.8.1",
    "next": "15.5.4",
    "prismjs": "^1.30.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/typography": "^0.5.10",
    "@types/mdx": "^2.0.13",
    "@types/node": "24.5.2",
    "@types/react": "^19.1.14",
    "@types/react-dom": "^19.1.9",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "glob": "^10.3.10",
    "markdownlint-cli": "^0.37.0",
    "postcss": "^8.5.6",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2"
  }
}
